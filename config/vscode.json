{
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.fontFamily": "'FiraCode Nerd Font', 'Fira Code Retina', 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontLigatures": true,
    "workbench.editor.highlightModifiedTabs": true,
    "editor.renderWhitespace": "boundary",
    "python.languageServer": "Pylance",
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.formatting.provider": "black",
    "python.linting.flake8Args": [
        "--max-line-length=120"
    ],
    "python.diagnostics.sourceMapsEnabled": true,
    "ltex.language": "fr",
    "[python]": {
        "editor.tabSize": 4
    },
    "ocaml.trace.server": "verbose",
    "diffEditor.renderSideBySide": false,
    "search.useGlobalIgnoreFiles": true,
    "search.useParentIgnoreFiles": true,
    "explorer.excludeGitIgnore": true,
    "markdown.extension.toc.levels": "2..3",
    "window.zoomLevel": 1,
    "latex-workshop.bibtex-format.tab": "tab",
    "latex-workshop.bibtex-format.trailingComma": true,
    "latex-workshop.latex.autoBuild.run": "never",
    "breadcrumbs.enabled": false,
    "gitlens.rebaseEditor.ordering": "asc",
    "workbench.colorTheme": "Embers Dark",
    "git.suggestSmartCommit": false,
    "editor.minimap.enabled": false,
    "coq-lsp.show_stats_on_hover": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "ltex.latex.commands": {
        "\\newtarget{}": "ignore",
        "\\newdef{}": "ignore"
    },
    "diffEditor.diffAlgorithm": "advanced",
    "editor.rulers": [
        80,
        100
    ],
    "texlab.experimental.mathEnvironments": [
        "mathpar"
    ],
    "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono"
}
