REPO=/home/dorian/Documents/Github/scripts

rm ~/.bashrc
ln -s $REPO/config/bashrc ~/.bashrc
ln -s $REPO/config/inputrc ~/.inputrc
ln -s $REPO/config/python_start.py ~/.python_start.py

ln -s $REPO/config/starship.toml ~/.config/

mkdir ~/.config/lsd
ln -s $REPO/config/lsd.yaml ~/.config/lsd/config.yaml

rm ~/.gitconfig
ln -s $REPO/config/gitconfig ~/.gitconfig

rm ~/.config/VSCodium/User/settings.json
ln -s $REPO/config/vscode.json ~/.config/VSCodium/User/settings.json
